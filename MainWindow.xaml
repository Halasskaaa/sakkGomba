<Window x:Class="sakkGomba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sakkGomba"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Canvas x:Name="gameCanvas">

			<Canvas.Background>
				<ImageBrush x:Name="bgBrush"
							ImageSource="/images/background.png"
							Stretch="UniformToFill"/>
			</Canvas.Background>





		</Canvas>

		<Grid x:Name="menuScreen" Background="#AA000000" Visibility="Collapsed">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="Mushroom Chess" FontSize="48" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
				<Button x:Name="startButton" Content="Start" Width="150" Height="50" Margin="0,20,0,0" Click="StartButton_Click"/>
				<Button x:Name="exitButton" Content="Exit" Width="150" Height="50" Margin="0,10,0,0" Click="ExitButton_Click"/>
			</StackPanel>
		</Grid>

		<Grid x:Name="difficultyScreen" Background="#AA000000" Visibility="Collapsed">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="Select Difficulty" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
				<Button x:Name="normalButton" Content="Normal" Width="150" Height="50" Margin="0,20,0,0" Click="NormalButton_Click"/>
				<Button x:Name="foggyButton" Content="Foggy" Width="150" Height="50" Margin="0,10,0,0" Click="FoggyButton_Click"/>
				<Button x:Name="rainyButton" Content="Rainy" Width="150" Height="50" Margin="0,10,0,0" Click="RainyButton_Click"/>
				<Button x:Name="backButton" Content="Back" Width="150" Height="50" Margin="0,10,0,0" Click="BackButton_Click"/>
			</StackPanel>
		</Grid>

		<Grid x:Name="gameOverScreen" Background="#AA000000" Visibility="Collapsed">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="Game Over" FontSize="48" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
				<Button x:Name="restartButton" Content="Restart" Width="150" Height="50" Margin="0,20,0,0" Click="RestartButton_Click"/>
				<Button x:Name="changeDifficultyButton" Content="Change Difficulty" Width="150" Height="50" Margin="0,10,0,0" Click="DifficultytChangeButton_Click"/>
				<Button x:Name="exitButton2" Content="Exit" Width="150" Height="50" Margin="0,10,0,0" Click="ExitButton_Click"/>
			</StackPanel>
		</Grid>

	</Grid>
</Window>
