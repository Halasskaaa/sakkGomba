<Window x:Class="sakkGomba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sakkGomba"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Canvas x:Name="gameCanvas">

			<Canvas.Background>
				<ImageBrush x:Name="bgBrush"
							ImageSource="/images/background.png"
							Stretch="UniformToFill"/>
			</Canvas.Background>

		</Canvas>

		<Grid x:Name="menuScreen" Background="#AA000000" Visibility="Collapsed">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="Mushroom Chess" FontSize="48" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
				<Button x:Name="startButton" Content="Start" Width="150" Height="50" Margin="0,20,0,0"/>
				<Button x:Name="exitButton" Content="Exit" Width="150" Height="50" Margin="0,10,0,0"/>
			</StackPanel>
		</Grid>

		<Grid x:Name="pieceChooser" Background="#AA000000" Visibility="Collapsed">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="706">
				<TextBlock Text="Select Difficulty" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
				<Button x:Name="bishop" Content="Bishop" Width="150" Height="50" Margin="0,20,0,0"/>
				<Button x:Name="knight" Content="Knight" Width="150" Height="50" Margin="0,10,0,0"/>
				<Button x:Name="queen" Content="Queen" Width="150" Height="50" Margin="0,10,0,0"/>
				<Button x:Name="rook" Content="Rook" Width="150" Height="50" Margin="0,10,0,0"/>
				<Button x:Name="backButton" Content="Back" Width="150" Height="50" Margin="0,10,0,0"/>
			</StackPanel>
		</Grid>

		<Grid x:Name="gameOverScreen" Background="#AA000000" Visibility="Visible">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="Game Over" FontSize="48" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
				<Button x:Name="restartButton" Content="Restart" Width="150" Height="50" Margin="0,20,0,0"/>
				<Button x:Name="changePiece" Content="Change Piece" Width="150" Height="50" Margin="0,10,0,0"/>
				<Button x:Name="exitButton2" Content="Exit" Width="150" Height="50" Margin="0,10,0,0"/>
			</StackPanel>
		</Grid>

	</Grid>
</Window>
